.header {
  text-align: center;
  width: 100%;
}
.header-image {
  width: 80px;
  height: 80px;
  margin: 40px 0;
  animation: rotate linear 5s infinite;
}
@keyframes rotate {
  0% {
    transform: rotate(0);
  }
  50% {
    transform: rotate(180deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.avatar-image {
  width: 70px;
  height: 70px;
  margin-top: 40px;
  border-radius: 100%;
}
.image-item {
  width: 100vw;
}